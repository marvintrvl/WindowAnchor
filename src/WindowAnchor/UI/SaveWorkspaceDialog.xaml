<ui:FluentWindow
    x:Class="WindowAnchor.UI.SaveWorkspaceDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Save Workspace"
    Width="560" Height="680"
    MinWidth="460" MinHeight="500"
    WindowStartupLocation="CenterOwner"
    ExtendsContentIntoTitleBar="True">

    <ui:FluentWindow.Resources>
        <Style x:Key="LinkBtnStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="{DynamicResource SystemAccentColorPrimaryBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0" Title="Save Workspace" ShowMinimize="False" ShowMaximize="False"/>

        <Grid Grid.Row="1" Margin="24,18,24,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Name -->
                <RowDefinition Height="Auto"/>  <!-- Save files -->
                <RowDefinition Height="Auto"/>  <!-- Header -->
                <RowDefinition Height="*"/>     <!-- Window list -->
                <RowDefinition Height="Auto"/>  <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Workspace Name -->
            <StackPanel Grid.Row="0" Margin="0,0,0,16">
                <TextBlock Text="Workspace Name" FontSize="13" FontWeight="Medium"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}" Margin="0,0,0,6"/>
                <ui:TextBox x:Name="WorkspaceNameInput"
                            PlaceholderText="e.g. Work — triple monitor"
                            FontSize="14"
                            KeyDown="OnKeyDown"/>
            </StackPanel>

            <!-- Save Files Option -->
            <Border Grid.Row="1"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1" CornerRadius="8" Padding="16,13" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel VerticalAlignment="Center" Margin="0,0,8,0">
                        <TextBlock Text="Save open files" FontSize="13" FontWeight="Medium"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <TextBlock Text="Detect and relaunch currently open documents on restore"
                                   FontSize="11" TextWrapping="Wrap"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                    <CheckBox x:Name="SaveFilesCheckBox" Grid.Column="1"
                              IsChecked="True" VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Windows to Save header -->
            <Grid Grid.Row="2" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Windows to Save" FontSize="13" FontWeight="Medium"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                           VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="All" Style="{StaticResource LinkBtnStyle}"
                            Click="OnSelectAllWindows" FontSize="12"/>
                    <TextBlock Text="·" Margin="2,0" VerticalAlignment="Center"
                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                    <Button Content="None" Style="{StaticResource LinkBtnStyle}"
                            Click="OnDeselectAllWindows" FontSize="12"/>
                </StackPanel>
            </Grid>

            <!-- Window list grouped by monitor -->
            <Border Grid.Row="3"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1" CornerRadius="8" Margin="0,0,0,16">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="4,4">
                    <ItemsControl x:Name="WindowGroupList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,0,0,4">
                                    <!-- Monitor header -->
                                    <TextBlock Text="{Binding MonitorHeader}" FontSize="11"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource SystemAccentColorPrimaryBrush}"
                                               Margin="12,8,0,4"/>
                                    <!-- Windows under this monitor -->
                                    <ItemsControl ItemsSource="{Binding Windows}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Padding="8,4" CornerRadius="4" Margin="4,1">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="Transparent"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background"
                                                                            Value="{DynamicResource SubtleFillColorSecondaryBrush}"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                                  VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding DisplayName}" FontSize="12"
                                                                       FontWeight="Medium"
                                                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                                       TextTrimming="CharacterEllipsis"/>
                                                            <TextBlock Text="{Binding TitleSnippet}" FontSize="10"
                                                                       Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Margin="0,1,0,0"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Action buttons -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                <ui:Button Content="Cancel" Appearance="Secondary"
                           Margin="0,0,8,0" Click="OnCancel"/>
                <ui:Button Content="Save Workspace" Appearance="Primary"
                           Icon="{ui:SymbolIcon Save24}" Click="OnSave"/>
            </StackPanel>
        </Grid>
    </Grid>
</ui:FluentWindow>
