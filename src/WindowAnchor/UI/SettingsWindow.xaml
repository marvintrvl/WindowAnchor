<ui:FluentWindow
    x:Class="WindowAnchor.UI.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="WindowAnchor — Settings"
    Width="780" Height="660"
    MinWidth="620" MinHeight="500"
    WindowStartupLocation="CenterScreen"
    ExtendsContentIntoTitleBar="True">

    <ui:FluentWindow.Resources>

        <!-- Hide element when row is in editing mode -->
        <Style x:Key="HideWhenEditing" TargetType="FrameworkElement">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <!-- Show element only when row is in editing mode -->
        <Style x:Key="ShowWhenEditing" TargetType="FrameworkElement">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <!-- ── Row hover trigger ──────────────────────────────────────────── -->
        <Style x:Key="RowCardStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12,10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SubtleFillColorSecondaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ── More-button (always visible) ────────────────────────────────── -->
        <Style x:Key="MoreBtnStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Opacity" Value="1"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background"
                                        Value="{DynamicResource SubtleFillColorTertiaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background"
                                        Value="{DynamicResource SubtleFillColorQuarternaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Separator in context menus -->
        <Style x:Key="MenuSep" TargetType="Separator"/>

    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ── Title bar ──────────────────────────────────────────────────── -->
        <ui:TitleBar Grid.Row="0" Title="WindowAnchor" ShowMinimize="False" ShowMaximize="False"/>

        <!-- ── Main scroll area ───────────────────────────────────────────── -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                      Padding="24,12,24,28" Focusable="False">
            <StackPanel>

                <!-- ══════════════════ SYSTEM ══════════════════ -->

                <StackPanel Orientation="Horizontal" Margin="4,8,0,8">
                    <ui:SymbolIcon Symbol="Settings24" FontSize="18"
                                   Foreground="{DynamicResource SystemAccentColorPrimaryBrush}"
                                   VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="System"
                               FontSize="15" FontWeight="SemiBold"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1" CornerRadius="8"
                        Padding="16,14" Margin="0,0,0,24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Start with Windows"
                                       FontSize="13" FontWeight="Medium"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Text="Launch WindowAnchor automatically when you log in"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <ui:ToggleSwitch x:Name="AutostartToggle"
                                         Grid.Column="1"
                                         VerticalAlignment="Center"
                                         Checked="OnAutostartToggleChanged"
                                         Unchecked="OnAutostartToggleChanged"/>
                    </Grid>
                </Border>

                <!-- ══════════════════ SAVED WORKSPACES ══════════════════ -->

                <!-- Section header (Win11 Settings style) -->
                <StackPanel Orientation="Horizontal" Margin="4,8,0,8">
                    <ui:SymbolIcon Symbol="AppsList24" FontSize="18"
                                   Foreground="{DynamicResource SystemAccentColorPrimaryBrush}"
                                   VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Saved Workspaces"
                                   FontSize="15" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <TextBlock x:Name="WorkspaceCountText"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Save workspace card -->
                <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1" CornerRadius="8"
                        Padding="16,12" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Save current workspace"
                                       FontSize="13" FontWeight="Medium"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Text="Choose monitors and open-file options, then save"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <ui:Button Grid.Column="1" Content="Save Workspace"
                                   Icon="{ui:SymbolIcon Save24}"
                                   Click="OnSaveNewWorkspace"/>
                    </Grid>
                </Border>

                <!-- Workspace rows card -->
                <Border x:Name="WorkspacesCard"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1" CornerRadius="8"
                        Margin="0,0,0,24">
                    <StackPanel>
                        <!-- Column headers -->
                        <Grid Margin="12,10,12,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="68"/>
                                <ColumnDefinition Width="68"/>
                                <ColumnDefinition Width="48"/>
                                <ColumnDefinition Width="36"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Name"
                                       FontSize="11" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Grid.Column="1" Text="Saved"
                                       FontSize="11" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Grid.Column="2" Text="Monitors"
                                       FontSize="11" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Grid.Column="3" Text="Windows"
                                       FontSize="11" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Grid.Column="4" Text="Files"
                                       FontSize="11" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        </Grid>
                        <Separator Margin="12,0" Opacity="0.4"/>

                        <!-- Dynamic rows -->
                        <ItemsControl x:Name="WorkspacesList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource RowCardStyle}" Margin="4,1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="68"/>
                                                <ColumnDefinition Width="68"/>
                                                <ColumnDefinition Width="48"/>
                                                <ColumnDefinition Width="36"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Col 0: view mode name + fingerprint subtitle -->
                                            <StackPanel Grid.Column="0"
                                                        Style="{StaticResource HideWhenEditing}"
                                                        VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="13" FontWeight="Medium"
                                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding FingerprintLabel}"
                                                           FontSize="10" FontFamily="Consolas"
                                                           Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                                           Margin="0,1,0,0"/>
                                            </StackPanel>

                                            <!-- Col 0: edit mode — TextBox + check/X icons -->
                                            <StackPanel Grid.Column="0"
                                                        Style="{StaticResource ShowWhenEditing}"
                                                        Orientation="Horizontal"
                                                        VerticalAlignment="Center">
                                                <TextBox x:Name="WsEditBox"
                                                         Text="{Binding EditName, UpdateSourceTrigger=PropertyChanged}"
                                                         FontSize="13" MinWidth="180" MaxWidth="280"
                                                         VerticalContentAlignment="Center"
                                                         Padding="6,3"
                                                         KeyDown="OnWsEditKeyDown"
                                                         Tag="{Binding}"/>
                                                <Button Margin="6,0,0,0"
                                                        Style="{StaticResource MoreBtnStyle}"
                                                        Padding="7,5"
                                                        Tag="{Binding}"
                                                        Click="OnWsEditSave"
                                                        ToolTip="Save">
                                                    <ui:SymbolIcon Symbol="Checkmark24" FontSize="15"
                                                                   Foreground="{DynamicResource SystemAccentColorPrimaryBrush}"/>
                                                </Button>
                                                <Button Margin="2,0,0,0"
                                                        Style="{StaticResource MoreBtnStyle}"
                                                        Padding="7,5"
                                                        Tag="{Binding}"
                                                        Click="OnWsEditCancel"
                                                        ToolTip="Cancel">
                                                    <ui:SymbolIcon Symbol="Dismiss24" FontSize="15"
                                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                                </Button>
                                            </StackPanel>

                                            <!-- Cols 1-4: hidden in edit mode -->
                                            <TextBlock Grid.Column="1"
                                                       Style="{StaticResource HideWhenEditing}"
                                                       Text="{Binding SavedAtDisplay}"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                       VerticalAlignment="Center"/>

                                            <TextBlock Grid.Column="2"
                                                       Style="{StaticResource HideWhenEditing}"
                                                       Text="{Binding MonitorCountLabel}"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                       VerticalAlignment="Center"/>

                                            <TextBlock Grid.Column="3"
                                                       Style="{StaticResource HideWhenEditing}"
                                                       Text="{Binding EntryCount}"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                       VerticalAlignment="Center"/>

                                            <TextBlock Grid.Column="4"
                                                       Style="{StaticResource HideWhenEditing}"
                                                       Text="{Binding SavedWithFilesLabel}"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                       VerticalAlignment="Center"/>

                                            <!-- More (⋯) button -->
                                            <Button Grid.Column="5"
                                                    Style="{StaticResource MoreBtnStyle}"
                                                    Tag="{Binding}"
                                                    Click="OnWorkspaceMoreClick">
                                                <Button.Resources>
                                                    <Style TargetType="Button" BasedOn="{StaticResource MoreBtnStyle}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Resources>
                                                <ui:SymbolIcon Symbol="MoreHorizontal20" FontSize="16"
                                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Empty state -->
                        <TextBlock x:Name="WorkspacesEmpty"
                                   Text="No saved workspaces yet. Save your first workspace above."
                                   FontSize="13"
                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,24" Visibility="Collapsed"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</ui:FluentWindow>
